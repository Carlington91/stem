extends layout.pug


block content
  .page-title.border-bottom.py-4
    div.container
      h1.text-capitalize #{program.area} Program

  section.content
    .container
      a(href='/programs', class='btn btn-primary border-0 mb-4 mt-0') Back to Programs
      
      .row
        .col-md-6
          img(src= program.image, alt= program.title class='program-img')
        .col-md-6
          h2.text-primary.mb-5.border-bottom.pb-4= program.title
          p <strong>Description:</strong><br> #{program.description}
          p <strong>Program Credit:</strong> #{program.credit}